<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.studentapp.student_client_server">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.studentapp.student_client_server.MainActivity"/>
        <activity android:name="com.studentapp.student_client_server.UserLoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.studentapp.student_client_server.ShowAllStudentsActivity" />
        <activity android:name="com.studentapp.student_client_server.ShowSingleRecordActivity" />
        <activity android:name="com.studentapp.student_client_server.UpdateActivity" />
    </application>

</manifest>